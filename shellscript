#!/usr/bin/env bash
set -euo pipefail

src="/var/www/html"
dest="/backup/html_$(date +%F_%H-%M-%S).tar.gz"

# 1. Ensure /var/www/html exists
if [ ! -d "$src" ]; then
    echo "ğŸ“‚ Creating $src..."
    sudo mkdir -p "$src"
    # Give ownership to current user (optional)
    sudo chown -R $USER:$USER "$src"
fi

# 2. Ensure /backup exists
if [ ! -d "$(dirname "$dest")" ]; then
    echo "ğŸ“‚ Creating $(dirname "$dest")..."
    sudo mkdir -p "$(dirname "$dest")"
fi

# 3. Run the backup
echo "ğŸ“¦ Creating backup..."
if sudo tar -czf "$dest" "$src"; then
    echo "âœ… Backup saved to $dest"
else
    echo "âŒ Backup failed!"
    exit 1
fi


